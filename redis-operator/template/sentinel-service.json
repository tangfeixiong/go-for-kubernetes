{
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
        "labels": {
            "app": "redis",
            "component": "sentinel",
            "role": "service",
            "sentinel":  "true"
        },
        "name": "{{.Name}}",
        "namespace": "{{.Namespace}}"
    },
    "spec": {
        "ports": [
            {
                "name": "sentinel",
                "port": 26379,
                "targetPort": 26379
            }
        ],
        "selector": {
            "app": "redis",
            "component": "sentinel",
            "sentinel": "true"
        }
    }
}